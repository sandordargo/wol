    <Button
        android:id="@+id/insertPhrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="insertPhrase" 
        android:text="@string/insert_new_phrase" />

    <Button
        android:id="@+id/setSender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="setSender" 
        android:text="@string/set_sender" />
    
    <LinearLayout android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
        
	     <TextView
	        android:id="@+id/is_on_in_backgroung_TV"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent" 
	        android:text="@string/is_on_in_background"
	        android:textSize="20sp" />
	
	    <CheckBox
	        android:id="@+id/is_on_in_backgroung_CB"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
        />
    </LinearLayout>
    

    <SeekBar
        android:id="@+id/frequency_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:progress="20"
        android:max="300" />
    
</LinearLayout>